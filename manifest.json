{
    "manifest_version": 3,
    "name": "Good Old Days",
    "description": "Time travel on YouTube, X and other platforms",
    "version": "0.0.1",
    "icons": {
        "128": "assets/logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/logo.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://x.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content_scripts/youtube.js"
            ]
        }
    ]
}