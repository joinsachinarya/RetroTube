{
    "manifest_version": 3,
    "name": "RetroTube",
    "description": "Vibe Back to OG YouTube",
    "version": "0.0.2",
    "icons": {
        "128": "assets/logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/logo.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content_scripts/youtube.js"
            ]
        }
    ]
}